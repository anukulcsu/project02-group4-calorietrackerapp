<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    android:background="#E0E0E0"> <TextView
    android:id="@+id/landingWelcome"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Welcome User!"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#000000"
    android:layout_marginBottom="40dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/landingAdminButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Admin Area"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/blue_button"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"/> <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/landingLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/blue_button"/>

</LinearLayout>